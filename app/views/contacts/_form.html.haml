- semantic_form_for resource do |f| 
  = f.error_messages
  - f.inputs do
    = f.input :name, :input_html => { :size => 30 }
    = f.input :self
    = f.input :contact_name, :required => false, :input_html => { :size => 30 }
    = f.input :address, :required => false, :input_html => { :size => 30 }
    = f.input :city, :required => false, :input_html => { :size => 30 }
    = f.input :state, :required => false, :input_html => { :size => 30 }
    = f.input :postal_code, :required => false, :input_html => { :size => 30 }
    = f.input :country, :required => false, :input_html => { :size => 30 }
    = f.input :tax_number, :required => false, :input_html => { :size => 30 }
    - f.buttons do
      = f.commit_button :button_html => { :value => t('formtastic.labels.commit') }