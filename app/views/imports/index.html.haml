- title 'Imports'

- content_for :sidebar do
  .block
    %h3 Tasks
    %ul.navigation
      %li= link_to 'Import a new CSV file', new_resource_path
      %li= link_to('View mappings', mappings_path)
      %li= link_to('Create a new mapping', new_mapping_path)

#block-tables.block
  .content
    %h2.title List of imports
    .inner
      - if @imports.size > 0
        %table.table
          %tr
            %th.first Name
            %th Is Self
            %th Tax Number
            %th Contact name
            %th Address
            %th.last
          = render @imports
        .actions-bar.wat-cf
          = will_paginate(collection, :inner_window => 2, :class => 'pagination')
      - else
        %p No imports found
