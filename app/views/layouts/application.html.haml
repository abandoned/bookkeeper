!!!
%html
  %head
    %link{:href => '/images/icon.png', :rel => 'shortcut icon', :type => 'image/x-icon' }
    %title= yield(:title)
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    %script{:type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js'}
    = javascript_include_tag 'jquery.autocomplete', 'jquery.select-autocomplete', 'jquery.obese-autocomplete', 'application'
    - if @content_for_head
      = yield(:head)
  %body
    #top
      - if current_user
        = render 'layouts/navigation'
    - flash.each do |name, msg|
      - haml_tag(:div, msg, :class => "flash-#{name}")
    #content
      = yield