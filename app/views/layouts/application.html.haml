!!!
%html
  %head
    %link{:href => '/images/icon.png', :rel => 'shortcut icon', :type => 'image/x-icon' }
    %title= yield(:title)
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag 'jquery-1.3.2.min', 'jquery.autocomplete', 'jquery.select-autocomplete', 'jquery.obese-autocomplete', 'application'
    - if @content_for_head
      = yield(:head)
  %body{:class => 'bp one-col'}
    %header#top
      - if current_user
        %nav#segmented-controls
          %span.wrapper
            - segmented_controls.each do |sc|
              - if (current_page?(sc[:path]))
                %span{:class => 'clickable'}>= sc[:text]
              - else
                %a{:href => "#{sc[:path]}", :class => 'clickable'}>= sc[:text]
    #container
      - flash.each do |name, msg|
        %section.flash_wrapper
          - haml_tag(:div, msg, :id => "flash_#{name}", :class => 'large')
      %section#content
        - if show_title?
          %h1
            %span= yield(:title)
          %hr
        = yield