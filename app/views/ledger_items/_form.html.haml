- content_for :jstemplates do
  = "var ledger_item='#{ escape_javascript(render(:partial => 'ledger_item_form', :object => @ledger_items.first )) }'"

- form_for @ledger_items.first do |f|
  %table
    %thead
      %tr
        %th
          = f.label :transacted_on
        %th
          = f.label :currency
        %th
          = f.label :account
        %th
          = f.label :sender
        %td
        %th
          = f.label :recipient
        %th
          = f.label :total_amount, 'Total'
        %th
          = f.label :tax_amount, 'Tax'
        %th
          = f.label :description
        %th
          = f.label :identifier
        %td
    %tbody
      = render :partial => 'ledger_item_form', :collection => @ledger_items
    %tfoot
      %tr
        %td
          = link_to('New', new_account_path)
        %td
          = link_to('New', new_person_path)
        %td
        %td
          = link_to('New', new_person_path)
  = f.submit t('formtastic.labels.commit')
