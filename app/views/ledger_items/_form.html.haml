- content_for :head do
  - javascript_tag do
    = "var ledger_item='#{ escape_javascript(render(:partial => 'ledger_item_form', :object => @ledger_items.first )) }'".html_safe!

- form_for @ledger_items.first, :url => ledger_items_path do |f|
  %table.data-grid.new-transaction
    %thead
      %tr
        %th{:colspan => 2}
        %th
          = f.label :account, 'Account'
        %th{:colspan => 2}
          = f.label :sender, 'Sender'
        %th
          = f.label :recipient, 'Recipient'
        %th
          = f.label :total_amount, 'Total'
        %th
          = f.label :tax_amount, 'Tax'
        %th
          = f.label :description
        %th{:colspan => 2}
          = f.label :identifier
        %td
    %tbody
      = render :partial => 'ledger_item_form', :collection => @ledger_items
    %tfoot
      %tr
        %td{:colspan => 10}
          = f.submit(t('formtastic.labels.commit'), :class => 'button')
