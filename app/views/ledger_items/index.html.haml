- title "Ledger Items", false

- unless @cart.ledger_items.empty?
  = render(:partial => "cart").html_safe!

%h1
  %span Ledger Items

= render :partial => "search"

- if collection.size > 0
  %table.data
    %thead
      %tr.small
        %th ID
        %th Account
        %th Sender
        %th Recipient
        %th Date
        %th Amount
        %th Description
    %tfoot
      %tr.smaller
        %td{:colspan => 6, :class => "currency underline"}
          - counter = 0
          - @totals.each do |k, v|
            - counter += 1
            - if counter != @totals.size
              = monetize(v, k) + "<br />"
            - else
              = monetize(v, k)
    %tbody
      = render(:partial => "ledger_item", :collection => collection)
  = will_paginate(collection, :inner_window => 2, :class => "small pagination")
- else
  %p.small No ledger items found
      
.footer
  = link_to "Create new ledger item", new_ledger_item_path(:account => params[:account])
  = link_to 'Export', ledger_items_path(params.merge(:format => :csv))