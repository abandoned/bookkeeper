%tr{:class => "#{cycle('odd', 'even')}"}[mapping]
  %td= mapping.name
  %td= mapping.currency
  %td= mapping.date_row
  %td= mapping.total_amount_row
  %td= mapping.tax_amount_row
  %td= mapping.description_row
  %td= mapping.second_description_row
  %td= mapping.has_title_row
  %td= mapping.day_follows_month
  %td= mapping.reverses_sign
  %td.last
    = link_to('Edit', edit_mapping_path(mapping))
    |
    = link_to('Delete', mapping, :confirm => 'Are you sure?', :method => :delete)
