%tr{:class => "#{cycle('odd', 'even')}"}[rule]
  %td= rule.matched_description
  %td= rule.matched_sender.name if rule.matched_sender
  %td= rule.matched_recipient.name if rule.matched_recipient
  %td= rule.matched_debit
  %td= rule.new_sender.name  if rule.new_sender
  %td= rule.new_recipient.name if rule.new_recipient
  %td= rule.new_account.name
  %td.last 
    = link_to 'Edit', edit_account_rule_path(@account, rule)
    |
    = link_to 'Delete', account_rule_path(@account, rule), :confirm => 'Are you sure?', :method => :delete
