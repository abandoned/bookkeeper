- title "Rules for #{@account.name}"

- if @rules.size > 0
  %table
    %tr
      %th Matched Description
      %th Matched Debit
      %th Matched Sender
      %th Matched Recipient
      %th New Sender
      %th New Recipient
      %th New Account
    - for rule in @rules
      %tr
        %td= rule.matched_description
        %td= rule.matched_debit
        %td= rule.matched_sender.name if rule.matched_sender
        %td= rule.matched_recipient.name if rule.matched_recipient
        %td= rule.new_sender.name  if rule.new_sender
        %td= rule.new_recipient.name if rule.new_recipient
        %td= rule.new_account.name
        %td= link_to 'Show', resource_path(rule)
        %td= link_to 'Edit', edit_resource_path(rule)
        %td= link_to 'Delete', resource_path(rule), :confirm => 'Are you sure?', :method => :delete
- else
  %p No rules available

