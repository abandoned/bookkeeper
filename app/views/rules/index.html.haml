- title "Rules for #{@account.name}"

- content_for :sidebar do
  .block
    %h3 Tasks
    %ul.navigation
      %li= link_to "Create a new rule", new_account_rule_path

#block-tables.block
  .content
    %h2.title List of Rules for #{@account.name}
    .inner
      - if @rules.size > 0
        %table.table
          %tr
            %th.first Description
            %th Sender
            %th Recipient
            %th Debit
            %th New Sender
            %th New Recipient
            %th New Account
            %th.last
          = render @rules
        .actions-bar.wat-cf
          = will_paginate(@rules, :inner_window => 2, :class => 'pagination')
      - else
        %p No rules found

