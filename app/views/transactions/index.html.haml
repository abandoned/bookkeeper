- title "Transactions"

- unless @cart.transactions.empty?
  = render :partial => "carts/cart"
  
= render :partial => "search"

- if collection.size > 0
  %table.data
    %thead
      %tr.small
        %th ID
        %th Account
        %th Sender
        %th Recipient
        %th Issue Date
        %th Amount
        %th Description
    %tfoot
      %tr.smaller
        %td{:colspan => 2}
          Total:
        %td{:colspan => 4, :class => "currency"}
          - counter = 0
          - @totals.each do |k, v|
            - counter += 1
            - if counter != @totals.size
              = number_to_currency(v, :unit => k, :format => "%u %n") + "<br />"
            - else
              = number_to_currency(v, :unit => k, :format => "%u %n")
    %tbody
      = render :partial => "transaction", :collection => collection
  = will_paginate(collection, :inner_window => 2, :class => "small pagination")
- else
  %p.small No records
      
%footer
  = link_to "New Transaction +", new_resource_path
  = link_to "Import Transactions +", new_import_path