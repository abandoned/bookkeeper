%h1 Bookkeeper
#block-login.block
  %h2 Log in
  .content.login
    .flash
      - flash.each do |type, message|
        %div{:class => "message #{type}"}
          %p= message
    - form_for(@user_session, :url => user_session_path, :html => { :class => "form login" }) do |form|
      .group.wat-cf
        .left= form.label :login, "Username"
        .right= form.text_field :login, :class => "text_field"
      .group.wat-cf
        .left= form.label :password, "Password"
        .right= form.password_field :password, :class => "text_field"
      .group.navform.wat-cf
        .right
          %button.button{:type => 'submit'}
            %img{:src => '/images/web-app-theme/key.png', :alt => 'Save'}
            Log in